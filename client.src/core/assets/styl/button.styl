button,
.button
  text-decoration none
  font-size 14px
  font-weight bold
  font-family Arial, sans-serif
  color #000
  font-shadow 0 -1px #fff
  border 1px solid #d3d3d3
  border-top 1px solid #e3e3e3
  border-radius 3px
  display inline-block
  outline none
  box-sizing border-box
  background-color #f5f5f5
  padding 5px 10px

  &:hover
    // background-color #eaeaea
    border 1px solid #cacaca
    border-top 1px solid #d3d3d3
    border-width 2px
    padding 4px 9px

  &:active
    padding 4px 9px
    border-width 2px
    background-color #ddd

  &.large
    font-weight 600
    font-size 20px
    border-radius 5px
    padding 10px 12px
    
    .fa
      font-size 20px
      padding 0 5px

  &.very-large
    font-weight 600
    font-size 24px
    border-radius 7px
    padding 14px 14px

    .fa
      font-size 24px
      padding   0 5px

  &.danger
    color $danger
