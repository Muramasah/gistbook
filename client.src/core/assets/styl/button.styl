.compound-button
  display flex

  button, .button
    margin-right 0
    border-radius 3px 0 0 3px

  .button-count
    font-size 13px
    font-weight bold
    border-radius 0 3px 3px 0
    border 1px solid #d3d3d3
    border-left 0
    line-height 26px
    height 28px
    padding 0 7px
    display block

button, .button
  height 28px
  text-decoration none
  font-size 14px
  font-weight bold
  font-family Arial, sans-serif
  color #000
  font-shadow 0 -1px #fff
  border 1px solid #d3d3d3
  border-top 1px solid #e3e3e3
  border-radius 3px
  display inline-block
  outline none
  box-sizing border-box
  background-color #f5f5f5
  padding 5px 10px

  &:hover
    border 1px solid #cacaca
    border-top 1px solid #d3d3d3
    border-width 2px
    padding 4px 9px

  &:active
    padding 4px 9px
    border-width 2px
    background-color #ddd

  &.large
    font-weight 600
    font-size 20px
    border-radius 5px
    padding 10px 12px
    
    .fa
      font-size 20px
      padding 0 5px

  &.very-large
    font-weight 600
    font-size 24px
    border-radius 7px
    padding 14px 14px

    .fa
      font-size 24px
      padding   0 5px

  &.danger
    color $danger
    
  &:disabled
    color #aaa
    background #ededed
    border-color #e3e3e3
    
    &:hover
      border-width 1px
