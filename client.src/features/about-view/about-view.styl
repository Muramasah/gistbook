.about
  text-align center
  font-size 24px
  font-weight 200
  line-height 33px
  margin 20px 0 50px

hr
  border-color $borderColor
  margin-bottom 60px

.about-container
  width 84%
  margin 0 auto
  display flex

  .creator, .sponsor
    flex .5
    text-align center

    span, a
      color $lightTextColor
      font-size 15px
      font-weight 200
  
  img
    display inline-block
    margin-bottom 15px

  .creator img
    border-radius 50%
