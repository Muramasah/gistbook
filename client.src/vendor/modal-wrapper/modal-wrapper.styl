.modal-wrapper
  display none
  overflow hidden
  width 100%
  height 100%
  top 0
  left 0

  &.show
    display block

  .modal-window
    position fixed
    top 15%
    left 0
    right 0
    z-index 20000
    background #fff
    border-radius 5px
    width 450px
    min-height 130px
    border 1px solid $borderColor
    box-shadow 1px 2px 3px rgba(0, 0, 0, .15);
    margin 0 auto
